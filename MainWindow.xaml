<Window x:Class="HardWareOperater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HardWareOperater"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Quiet">
    <Grid>
        <Button Content="开始" HorizontalAlignment="Left" Height="40" Margin="50,140,0,0" VerticalAlignment="Top" Width="105" Click="Start_Click"/>
        <Button Content="停止" HorizontalAlignment="Left" Height="40" Margin="50,220,0,0" VerticalAlignment="Top" Width="105" Click="Stop_Click"/>
        <TextBlock x:Name="bool_show" HorizontalAlignment="Left" Height="190" Margin="170,220,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="585"/>
        <DataGrid x:Name="mygrid" HorizontalAlignment="Left" Height="210" Margin="170,10,0,0" VerticalAlignment="Top" Width="540"/>

    </Grid>
</Window>
